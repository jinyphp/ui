{
    "name": "jiny/ui",
    "description": "ui for JinyPHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "hojinlee",
            "email": "infohojin@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2",
        "jiny/html": "^0.3",
        "jiny/css": "^0.0.3",
        "jiny/ui-components": "^0.7",
        "jiny/ui-widgets": "^0.6"
    },
    "autoload": {
        "psr-4": {
            "Jiny\\UI\\":"src/"
        },
        "files" : [
            "src/Helpers/Helper.php",
            "src/Helpers/Bootstrap.php",
            "src/Helpers/Tailwind.php",
            "src/Helpers/Html.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Jiny\\UI\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jiny\\UI\\JinyUIServiceProvider"
            ]
        }
    }

}
